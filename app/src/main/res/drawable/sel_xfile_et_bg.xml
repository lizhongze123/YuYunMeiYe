<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">

        <layer-list>

            <item
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@color/white" />

                    <stroke
                        android:width="@dimen/y2"
                        android:color="@color/white" />
                </shape>
            </item>

        </layer-list>

    </item>
    <item android:state_enabled="true">

        <layer-list>

            <item
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@color/white" />

                    <stroke
                        android:width="@dimen/y1"
                        android:color="#eeeeee" />
                </shape>
            </item>

        </layer-list>

    </item>

</selector>

