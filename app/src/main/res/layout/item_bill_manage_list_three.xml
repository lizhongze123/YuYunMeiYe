<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y8"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_selector_list_view_item"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x32"
        android:paddingRight="@dimen/x32"
        android:paddingTop="@dimen/y20">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_store" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@id/iv_avatar">

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="用户名"
                    android:textColor="#FF1C1C1C"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_toRightOf="@id/tv_name"
                    android:textColor="#FF9B59"
                    android:textSize="@dimen/x22"
                    tools:text="钻石" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_user"
                android:layout_marginTop="@dimen/y8"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/x22"
                tools:text="12352525525" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_below="@+id/iv_avatar"
            android:layout_marginTop="@dimen/y16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_oneDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24"
                android:text="本单储值:" />

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24"
                tools:text="御玫瑰" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_below="@+id/iv_avatar"
            android:layout_marginTop="@dimen/y16"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_twoDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24"
                android:text="储值金额:" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24"
                tools:text="购买" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_below="@+id/ll_one"
            android:layout_marginTop="@dimen/y16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_threeDesc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="收银员:"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24"
                tools:text="御玫瑰" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_four"
            android:layout_below="@+id/ll_one"
            android:layout_marginTop="@dimen/y16"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fourDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24"
                android:text="会员卡号:" />

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#FF222222"
                android:textSize="@dimen/x24"
                tools:text="御玫瑰" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="@dimen/y10"
            android:text="2018年5月23日 14:44:44"
            android:textColor="#FF7A7A7A"
            android:textSize="@dimen/x18" />


    </RelativeLayout>

</RelativeLayout>