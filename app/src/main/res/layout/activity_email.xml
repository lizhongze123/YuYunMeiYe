<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="start"
        android:hint="请输入内容"
        android:minHeight="@dimen/y304"
        android:paddingBottom="@dimen/x32"
        android:paddingEnd="@dimen/x32"
        android:paddingLeft="@dimen/x32"
        android:paddingRight="@dimen/x32"
        android:paddingStart="@dimen/x32"
        android:paddingTop="@dimen/x32"
        android:textColor="#274335"
        android:textColorHint="#D4D4D4"
        android:textSize="@dimen/x28" />


</LinearLayout>