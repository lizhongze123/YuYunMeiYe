<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y32"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"
        android:background="@drawable/shape_bill_type_bottom_bg"
        android:elevation="@dimen/x10"
        android:orientation="vertical"
        android:padding="@dimen/x32">

        <TextView
            android:layout_width="@dimen/x132"
            android:layout_height="@dimen/y67"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y32"
            android:elevation="@dimen/x10"
            android:gravity="center"
            android:text="赠送"
            android:textColor="#1c1c1c"
            android:textSize="@dimen/x32" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View style="@style/separation_line" />

    </LinearLayout>

</LinearLayout>