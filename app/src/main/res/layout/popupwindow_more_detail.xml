<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/y220"
        android:layout_marginRight="@dimen/x20"
        android:paddingTop="@dimen/y50"
        android:paddingBottom="@dimen/y30"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:background="@drawable/popupwindow_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_item_sel"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:padding="@dimen/x2"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:layout_gravity="center_vertical"
                android:textColor="#274335"
                android:gravity="center_vertical"
                android:text="编辑"
                android:textSize="@dimen/x28" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:drawingCacheQuality="low"
            android:background="#f5f5f5"/>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/common_item_sel"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_del_one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#274335"
                android:layout_marginLeft="@dimen/x16"
                android:gravity="center_vertical"
                android:text="删除"
                android:textSize="@dimen/x28"  />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

