<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_selector_list_view_item"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:paddingTop="@dimen/x16"
        android:paddingBottom="@dimen/y16">

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:layout_marginRight="@dimen/x24"
            android:button="@null"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/bg_checkbox_blue"
            android:layout_centerVertical="true" />

        <cn.yuyun.yymy.view.RoundAngleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:src="@color/loadding_img_bg"
            android:layout_toRightOf="@+id/cb"
            android:layout_marginRight="@dimen/x24"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_avatar"
            android:singleLine="true"
            android:maxEms="8"
            android:ellipsize="end"
            android:textColor="#274335"
            android:textSize="@dimen/x24"
            tools:text="用户名" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginTop="@dimen/y8"
            android:textColor="@color/text_gray"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/x20"
            tools:text="李李李" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_avatar"
            android:layout_alignStart="@+id/tv_name"
            android:textColor="#274335"
            android:textSize="@dimen/x28"
            android:textStyle="bold"
            tools:text="1111" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#F5F5F5"/>

</LinearLayout>