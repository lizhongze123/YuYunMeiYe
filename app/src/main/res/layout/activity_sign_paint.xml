<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y128"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="@dimen/x92"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:paddingBottom="@dimen/y42"
            android:paddingTop="@dimen/y42"
            android:src="@drawable/back_black" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="@dimen/x92"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:paddingBottom="@dimen/y42"
            android:paddingTop="@dimen/y42"
            android:layout_marginRight="@dimen/x88"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_back"
            android:src="@drawable/draw_del" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/x92"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:paddingBottom="@dimen/y42"
            android:paddingTop="@dimen/y42"
            android:layout_marginRight="@dimen/x88"
            android:layout_toLeftOf="@+id/tv_done"
            android:src="@drawable/draw_back" />

        <TextView
            android:id="@+id/tv_done"
            android:layout_width="@dimen/x104"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:paddingBottom="@dimen/y42"
            android:paddingTop="@dimen/y42"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="提交"
            android:textColor="#F57927"
            android:textSize="@dimen/x28" />

    </RelativeLayout>

    <View style="@style/separation_line"/>

    <cn.yuyun.yymy.view.DrawBoard
        android:id="@+id/drawBoard"
        android:padding="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>