<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/y24">

    <cn.yuyun.yymy.view.RoundAngleImageView
        android:id="@+id/iv_avatar"
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@drawable/avatar_default_female" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_marginLeft="@dimen/x16"
        tools:text="昵称"
        android:textStyle="bold"
        android:textColor="#274335"
        android:textSize="@dimen/x30" />

    <TextView
        android:id="@+id/tv_commentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x24"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/x16"
        tools:text="昵称"
        android:textColor="#7a7a7a"
        android:textSize="@dimen/x24" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_marginRight="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginLeft="@dimen/x16"
        android:textSize="@dimen/x28"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_avatar"
        tools:text="555dkkdkdkdkdkdkk的解放军的解放ID减肥的减肥ID放假大姐夫ID就发ID就发加点覅记得放ID见覅及发动机5" />

    <RelativeLayout
        android:id="@+id/rl_work"
        android:layout_marginRight="@dimen/x24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_marginTop="@dimen/y24"
        android:padding="@dimen/x16"
        android:background="#f8f8f8">

        <TextView
            android:id="@+id/tv_workTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#274335"
            tools:text="我的工作汇报"
            android:textStyle="bold"
            android:textSize="@dimen/x26"/>

        <TextView
            android:id="@+id/tv_workTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7a7a7a"
            tools:text="2018年12月6日10:59:25"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x22"/>

        <TextView
            android:id="@+id/tv_workContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_workTitle"
            android:layout_marginTop="@dimen/y16"
            tools:text="你多年后的较好的华国锋打卡的"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/x22"
            android:textColor="#797979" />

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_work"
        android:layout_marginTop="@dimen/y24"
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"/>

</RelativeLayout>