<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_white_corner"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/x224"
        android:layout_height="@dimen/y160"
        android:layout_marginTop="@dimen/y40"
        android:src="@drawable/bg_sign" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x88"
        android:layout_marginTop="@dimen/y40"
        android:textStyle="bold"
        android:textColor="#50D3C0"
        tools:text="18:55" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x32"
        android:layout_marginTop="@dimen/y8"
        android:textStyle="bold"
        android:textColor="#50D3C0"
        tools:text="下班打卡成功" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="坚持不懈，成功终会来临~"
        android:layout_marginLeft="@dimen/x94"
        android:layout_marginRight="@dimen/x94"
        android:layout_marginTop="@dimen/y42"
        android:layout_marginBottom="@dimen/y70"
        android:textSize="@dimen/x28"
        android:textColor="#CCCCCC"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:drawingCacheQuality="low"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/dialog_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x32"
        android:paddingTop="@dimen/x32"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textStyle="bold"
            android:textColor="#41B0C2"
            android:textSize="@dimen/x32" />

    </LinearLayout>

</LinearLayout>