<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_error_layout"
        android:layout_width="@dimen/data_null_pic_width"
        android:layout_height="@dimen/data_null_pic_height"
        android:background="@drawable/no_network"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_error_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_cc"
        android:visibility="gone"
        android:textSize="@dimen/x28"
        tools:visibility="visible"
        android:text="我的东西是不见了吗~" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y24"
        android:textSize="@dimen/x26"
        android:background="@drawable/sel_refresh_bg"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="点击刷新"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x435"
            android:layout_height="@dimen/y386"
            android:src="@drawable/go_login" />

        <TextView
            android:id="@+id/tv_error_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x20"
            android:gravity="center"
            android:textSize="@dimen/x28"
            android:textColor="@color/status_text"
            android:text="亲，前往登录注册可以查看更多精彩内容哦~"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/x60">

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y80"
                android:background="@drawable/login_button_selector"
                android:gravity="center"
                android:layout_marginRight="@dimen/x48"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/x36" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y80"
                android:background="@drawable/register_button_selector"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x36" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>