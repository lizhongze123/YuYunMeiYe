<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_refund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x24"
                    android:background="@drawable/shape_bill_type_bottom_bg"
                    android:elevation="@dimen/x10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="@dimen/x180"
                            android:layout_height="@dimen/y85"
                            android:layout_marginLeft="@dimen/x32"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="退款"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x32" />

                        <LinearLayout
                            android:id="@+id/expand_refund"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x16"
                                android:layout_toLeftOf="@+id/iv_expand"
                                android:text="更多"
                                android:textColor="#c0c0c0"
                                android:textSize="@dimen/x28" />

                            <ImageView
                                android:id="@+id/iv_refund"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y16"
                                android:layout_marginRight="@dimen/x16"
                                android:src="@drawable/ic_expand" />

                        </LinearLayout>


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_refund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x24"
                        android:paddingRight="@dimen/x24"
                        android:visibility="gone">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_give"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x24"
                    android:background="@drawable/shape_bill_type_bottom_bg"
                    android:elevation="@dimen/x10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/x180"
                            android:layout_height="@dimen/y85"
                            android:layout_marginLeft="@dimen/x32"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="赠送"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x32" />

                        <LinearLayout
                            android:id="@+id/expand_give"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x16"
                                android:layout_toLeftOf="@+id/iv_expand"
                                android:text="更多"
                                android:textColor="#c0c0c0"
                                android:textSize="@dimen/x28" />

                            <ImageView
                                android:id="@+id/iv_give"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y16"
                                android:layout_marginRight="@dimen/x16"
                                android:src="@drawable/ic_expand" />

                        </LinearLayout>


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_give"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x24"
                        android:paddingRight="@dimen/x24"
                        android:visibility="gone">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_consume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x24"
                    android:background="@drawable/shape_bill_type_bottom_bg"
                    android:elevation="@dimen/x10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/x180"
                            android:layout_height="@dimen/y85"
                            android:layout_marginLeft="@dimen/x32"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="耗卡"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x32" />

                        <LinearLayout
                            android:id="@+id/expand_consume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x16"
                                android:layout_toLeftOf="@+id/iv_expand"
                                android:text="更多"
                                android:textColor="#c0c0c0"
                                android:textSize="@dimen/x28" />

                            <ImageView
                                android:id="@+id/iv_consume"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y16"
                                android:layout_marginRight="@dimen/x16"
                                android:src="@drawable/ic_expand" />

                        </LinearLayout>


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_consume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x24"
                        android:paddingRight="@dimen/x24"
                        android:visibility="gone">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x24"
                    android:background="@drawable/shape_bill_type_bottom_bg"
                    android:elevation="@dimen/x10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/x180"
                            android:layout_height="@dimen/y85"
                            android:layout_marginLeft="@dimen/x32"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="购买"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x32" />

                        <LinearLayout
                            android:id="@+id/expand_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x16"
                                android:layout_toLeftOf="@+id/iv_expand"
                                android:text="更多"
                                android:textColor="#c0c0c0"
                                android:textSize="@dimen/x28" />

                            <ImageView
                                android:id="@+id/iv_buy"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y16"
                                android:layout_marginRight="@dimen/x16"
                                android:src="@drawable/ic_expand" />

                        </LinearLayout>


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_buy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x24"
                        android:paddingRight="@dimen/x24"
                        android:visibility="gone">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_storedvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x24"
                    android:background="@drawable/shape_bill_type_bottom_bg"
                    android:elevation="@dimen/x10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/x180"
                            android:layout_height="@dimen/y85"
                            android:layout_marginLeft="@dimen/x32"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="储值"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x32" />

                        <LinearLayout
                            android:id="@+id/expand_storedvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x16"
                                android:layout_toLeftOf="@+id/iv_expand"
                                android:text="更多"
                                android:textColor="#c0c0c0"
                                android:textSize="@dimen/x28" />

                            <ImageView
                                android:id="@+id/iv_storedvalue"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y16"
                                android:layout_marginRight="@dimen/x16"
                                android:src="@drawable/ic_expand" />

                        </LinearLayout>


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_storedvalue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x24"
                        android:paddingRight="@dimen/x24"
                        android:visibility="gone">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_repayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/x24"
                    android:background="@drawable/shape_bill_type_bottom_bg"
                    android:elevation="@dimen/x10"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="@dimen/x180"
                            android:layout_height="@dimen/y85"
                            android:layout_marginLeft="@dimen/x32"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="还款"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x32" />

                        <LinearLayout
                            android:id="@+id/expand_repayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:padding="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x16"
                                android:layout_toLeftOf="@+id/iv_expand"
                                android:text="更多"
                                android:textColor="#c0c0c0"
                                android:textSize="@dimen/x28" />

                            <ImageView
                                android:id="@+id/iv_repayment"
                                android:layout_width="@dimen/x28"
                                android:layout_height="@dimen/y16"
                                android:layout_marginRight="@dimen/x16"
                                android:src="@drawable/ic_expand" />

                        </LinearLayout>


                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_repayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x24"
                        android:paddingRight="@dimen/x24"
                        android:visibility="gone">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>