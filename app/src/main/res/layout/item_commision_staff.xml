<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/y24"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f8f8f8"
        android:padding="@dimen/x24">

        <cn.yuyun.yymy.view.bannerview.RoundAngleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:src="@drawable/avatar_default_female"/>

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@+id/iv_avatar">

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginRight="@dimen/x8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#1c1c1c"
                android:textStyle="bold"
                android:textSize="@dimen/x28"
                tools:text="李李李" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginTop="@dimen/y3"
                android:textColor="#FFA0D4"
                android:textSize="@dimen/x20"
                tools:text="16:45:27" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_entryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_below="@+id/rl_name"
            android:layout_marginTop="@dimen/y8"
            android:textColor="#7a7a7a"
            android:textSize="@dimen/x24"
            android:text="入职时间:" />

        <ImageView
            android:id="@+id/iv_del"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x36"
            android:padding="@dimen/x6"
            android:src="@drawable/icon_clear2"
            android:layout_alignParentRight="true"
            tools:text="52225" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_avatar"
            android:layout_marginTop="@dimen/y30">

            <TextView
                android:id="@+id/tv_saleDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售¥"
                android:textSize="@dimen/x24"
                android:textColor="#7A7A7A"/>

            <EditText
                android:id="@+id/et_sale"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y44"
                android:background="@color/white"
                android:lines="1"
                android:layout_marginLeft="@dimen/x16"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="0.00"
                android:textSize="@dimen/x24"
                android:textColorHint="#cccccc"
                android:textColor="#1c1c1c"/>

            <TextView
                android:id="@+id/tv_beforeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x88"
                android:text="售前¥"
                android:textSize="@dimen/x24"
                android:textColor="#7a7a7a"/>

            <EditText
                android:id="@+id/et_before"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/y44"
                android:background="@color/white"
                android:inputType="numberDecimal"
                android:lines="1"
                android:layout_marginLeft="@dimen/x16"
                android:gravity="center"
                android:hint="0.00"
                android:textSize="@dimen/x24"
                android:textColorHint="#cccccc"
                android:textColor="#1c1c1c"/>


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>