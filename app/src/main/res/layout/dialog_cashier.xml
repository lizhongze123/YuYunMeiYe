<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_white_corner"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_marginTop="@dimen/y40"
        android:src="@drawable/icon_finish" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x32"
        android:layout_marginTop="@dimen/y16"
        android:textStyle="bold"
        android:textColor="#50D3C0"
        tools:text="耗卡完成" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否推送本次消费信息~"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/y32"
        android:layout_marginBottom="@dimen/y70"
        android:textSize="@dimen/x28"
        android:textColor="#CCCCCC"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_wechat"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:layout_marginRight="@dimen/x8"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/bg_checkbox_blue"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/x24"
            android:textColor="#7a7a7a"
            android:text="微信"/>

        <CheckBox
            android:id="@+id/cb_sms"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"
            android:layout_marginLeft="@dimen/x64"
            android:layout_marginRight="@dimen/x8"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/bg_checkbox_blue"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/x24"
            android:textColor="#7a7a7a"
            android:text="短信"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginTop="@dimen/y24"
        android:drawingCacheQuality="low"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/dialog_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不了谢谢"
            android:textStyle="bold"
            android:textColor="#41B0C2"
            android:textSize="@dimen/x32" />

        <View
            android:layout_width="@dimen/y2"
            android:layout_height="@dimen/y110"
            android:background="#f5f5f5"
            android:drawingCacheQuality="low"/>

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="推送信息"
            android:textStyle="bold"
            android:textColor="#41B0C2"
            android:textSize="@dimen/x32" />

    </LinearLayout>

</LinearLayout>