<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_selector_list_view_item"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:paddingTop="@dimen/y18"
        android:paddingBottom="@dimen/y18">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="名字"
            android:textColor="#274335"
            android:maxEms="8"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            tools:text="消费门店"
            android:layout_marginTop="@dimen/y8"
            android:textColor="#7a7a7a"
            android:textSize="@dimen/x22" />

        <TextView
            android:id="@+id/tv_mobile"
            android:textSize="@dimen/x22"
            android:layout_below="@+id/tv_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y18"
            android:lines="1"
            android:textColor="#274335"
            android:ellipsize="end"
            android:text="手机号：" />

        <TextView
            android:id="@+id/tv_time"
            android:textSize="@dimen/x22"
            android:layout_below="@+id/tv_card"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y18"
            android:lines="1"
            android:textColor="#274335"
            android:ellipsize="end"
            android:text="消费时间" />

        <TextView
            android:id="@+id/tv_service"
            android:textSize="@dimen/x22"
            android:layout_below="@+id/tv_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#274335"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="8"
            android:layout_marginTop="@dimen/y8"
            android:text="消费项目" />

        <TextView
            android:id="@+id/tv_serviceNum"
            android:textSize="@dimen/x22"
            android:layout_below="@+id/tv_mobile"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:lines="1"
            android:textColor="#274335"
            android:ellipsize="end"
            android:text="项目数" />

    </RelativeLayout>

    <View
        style="@style/separation_line"
        android:layout_below="@+id/rl" />

</RelativeLayout>
