<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/x3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/x230"
        android:scaleType="centerCrop"
        tools:src="@drawable/picture_add" />

    <ImageView
        android:id="@+id/item_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:paddingBottom="@dimen/x16"
        android:paddingLeft="@dimen/x16"
        android:src="@drawable/compose_photo_close" />

</FrameLayout>



