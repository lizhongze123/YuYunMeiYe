<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/y2"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_selector_list_view_item"
        android:paddingLeft="@dimen/x32"
        android:paddingRight="@dimen/x32"
        android:paddingBottom="@dimen/y16"
        android:paddingTop="@dimen/y16">

        <cn.yuyun.yymy.view.bannerview.RoundAngleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:src="@drawable/avatar_default_female"/>

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginLeft="@dimen/x16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_toRightOf="@+id/tv_nameDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#274335"
                android:textSize="@dimen/x28"
                android:maxEms="10"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="李李李李李李李李李李f2222252" />

            <TextView
                android:id="@+id/tv_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:layout_toRightOf="@id/tv_name"
                android:textColor="#FF9B59"
                android:textSize="@dimen/x20"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="钻石" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cardNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_below="@+id/rl_name"
            android:layout_marginTop="@dimen/y7"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/x24"
            tools:text="5555555" />


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x32"
            tools:text="52225" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_timeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/tv_time"
            android:text="到店时间："
            android:textColor="@color/gray_66"
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_status"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_66"
            android:textSize="12sp"
            tools:text="16:45:27" />

    </RelativeLayout>

</RelativeLayout>