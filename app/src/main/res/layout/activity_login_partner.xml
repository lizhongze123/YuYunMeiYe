<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:paddingLeft="@dimen/x24"
    android:paddingRight="@dimen/x24">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y88"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:text="取消"
        android:textColor="#7A7A7A"
        android:textSize="@dimen/x28" />

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cancel"
        android:includeFontPadding="false"
        android:text="合伙人入口"
        android:textColor="#274335"
        android:textSize="@dimen/x60" />

    <TextView
        android:id="@+id/tv_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_top"
        android:layout_marginTop="@dimen/y8"
        android:includeFontPadding="false"
        android:text="使用御韵系统账号登录APP"
        android:textColor="#7a7a7a"
        android:textSize="@dimen/x24" />

    <LinearLayout
        android:id="@+id/ll_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_middle"
        android:layout_marginTop="@dimen/y120"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="@dimen/x610"
            android:layout_height="@dimen/y88"
            android:background="@drawable/shape_user_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x22"
                android:src="@drawable/icon_user" />

            <cn.yuyun.yymy.view.EditTextWithDel
                android:id="@+id/et_phoneNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x40"
                android:layout_weight="1"
                android:digits="@string/input_pwd"
                android:background="@null"
                android:hint="请输入账号"
                android:maxLines="1"
                android:textColor="#274335"
                android:textSize="@dimen/x28" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/x610"
            android:layout_height="@dimen/y88"
            android:layout_marginTop="@dimen/y32"
            android:background="@drawable/shape_user_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y40"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x22"
                android:src="@drawable/icon_pwd" />

            <cn.yuyun.yymy.view.EditTextWithDel
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/input_pwd"
                android:hint="请输入密码"
                android:singleLine="true"
                android:textColor="#274335"
                android:textSize="@dimen/x28" />

            <CheckBox
                android:id="@+id/cb_eye"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x22"
                android:layout_marginRight="@dimen/x30"
                android:layout_toLeftOf="@+id/tv"
                android:background="@drawable/login_eye_selector"
                android:button="@null"
                android:checked="false" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="@dimen/x610"
            android:layout_height="@dimen/y88"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y80"
            android:background="@drawable/login_button_selector4"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x35" />

    </LinearLayout>

</RelativeLayout>