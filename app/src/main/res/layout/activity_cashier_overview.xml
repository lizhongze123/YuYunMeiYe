<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x24"
        android:paddingTop="@dimen/x24">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/x24">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/pay_cash"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:text="现金"
                android:textColor="#7a7a7a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/x24"
                android:textColor="#7A7A7A"/>

            <EditText
                android:id="@+id/et_cash"
                android:layout_gravity="right"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y44"
                android:background="#f5f5f5"
                android:inputType="numberDecimal"
                android:layout_marginLeft="@dimen/x8"
                android:gravity="center"
                android:lines="1"
                android:hint="0.00"
                android:textSize="@dimen/x24"
                android:textColorHint="#cccccc"
                android:textColor="#1c1c1c"/>


        </LinearLayout>

        <View
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginBottom="@dimen/y24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/x24">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/pay_pos"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:text="刷卡"
                android:textColor="#7a7a7a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/x24"
                android:textColor="#7A7A7A"/>

            <EditText
                android:id="@+id/et_pos"
                android:layout_gravity="right"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y44"
                android:background="#f5f5f5"
                android:inputType="numberDecimal"
                android:layout_marginLeft="@dimen/x8"
                android:gravity="center"
                android:lines="1"
                android:hint="0.00"
                android:textSize="@dimen/x24"
                android:textColorHint="#cccccc"
                android:textColor="#1c1c1c"/>


        </LinearLayout>

        <View
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginBottom="@dimen/y24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/x24">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/pay_transfer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:text="转账"
                android:textColor="#7a7a7a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/x24"
                android:textColor="#7A7A7A"/>

            <EditText
                android:id="@+id/et_transfer"
                android:layout_gravity="right"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y44"
                android:background="#f5f5f5"
                android:inputType="numberDecimal"
                android:layout_marginLeft="@dimen/x8"
                android:gravity="center"
                android:lines="1"
                android:hint="0.00"
                android:textSize="@dimen/x24"
                android:textColorHint="#cccccc"
                android:textColor="#1c1c1c"/>


        </LinearLayout>

        <View
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginBottom="@dimen/y24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/x24">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/pay_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:text="微信"
                android:textColor="#7a7a7a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/x24"
                android:textColor="#7A7A7A"/>

            <EditText
                android:id="@+id/et_wechat"
                android:layout_gravity="right"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y44"
                android:background="#f5f5f5"
                android:inputType="numberDecimal"
                android:layout_marginLeft="@dimen/x8"
                android:gravity="center"
                android:lines="1"
                android:hint="0.00"
                android:textSize="@dimen/x24"
                android:textColorHint="#cccccc"
                android:textColor="#1c1c1c"/>


        </LinearLayout>

        <View
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/y28"
            android:layout_marginLeft="@dimen/x48"
            android:layout_marginBottom="@dimen/y24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/x24">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/pay_alipay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:text="支付宝"
                android:textColor="#7a7a7a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/x24"
                android:textColor="#7A7A7A"/>

            <EditText
                android:id="@+id/et_alipay"
                android:layout_gravity="right"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y44"
                android:background="#f5f5f5"
                android:inputType="numberDecimal"
                android:layout_marginLeft="@dimen/x8"
                android:gravity="center"
                android:lines="1"
                android:hint="0.00"
                android:textSize="@dimen/x24"
                android:textColorHint="#cccccc"
                android:textColor="#1c1c1c"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:background="#f5f5f5"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="@dimen/y28"
        android:layout_marginBottom="@dimen/y24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y24"/>

    <TextView
        android:id="@+id/tv_desc"
        android:textSize="@dimen/x32"
        android:textColor="#3f3f3f"
        android:layout_below="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x24"
        android:textStyle="bold"
        android:text="收银备注"/>

    <EditText
        android:id="@+id/et_mark"
        android:layout_below="@+id/tv_desc"
        android:layout_width="match_parent"
        android:background="@null"
        android:hint="填写备注信息"
        android:textSize="@dimen/x28"
        android:gravity="top"
        android:layout_marginTop="@dimen/y16"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:layout_height="@dimen/y300" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:paddingLeft="@dimen/x24"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_amountDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应收款:"
            android:layout_marginRight="@dimen/x8"
            android:textColor="#3f3f3f"
            android:textSize="@dimen/x24"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_amount"
            android:textSize="@dimen/x32"
            android:textColor="#FC6B6B"
            android:text="0.00"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_amountDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_nextStep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="完成结算"
            android:textColor="#ffffff"
            android:clickable="false"
            android:textSize="@dimen/x32"
            android:paddingLeft="@dimen/x54"
            android:paddingRight="@dimen/x54"
            android:gravity="center"
            android:background="#cccccc"/>

    </RelativeLayout>

</RelativeLayout>