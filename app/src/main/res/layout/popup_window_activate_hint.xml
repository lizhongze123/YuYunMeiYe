<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/x510"
        android:layout_height="@dimen/y290"
        android:scaleType="fitXY"
        android:src="@drawable/activate_hint_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="22dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/updataversioncode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y20"
            android:gravity="center"
            android:paddingBottom="@dimen/y24"
            android:text="1.0.5"
            android:visibility="gone"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/updataversion_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="100dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="@dimen/y15"
            android:textColor="#8e8e8e"
            android:textSize="@dimen/x26"
            android:layout_marginBottom="20dp"
            tools:text="1.生命不息，奋斗不止\n2.万物起于微乎，量变引发质变\n3.这是版本升级描述1.生命不息，奋斗不止\n2.万物起于微乎，量变引发质变\n3.这是版本升级描述1.生命不息，奋斗不止\n2.万物起于微乎，量变引发质变\n3.这是版本升级描述" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_sure"
        android:layout_width="@dimen/x320"
        android:layout_height="44dp"
        android:layout_marginTop="-22dp"
        android:background="@drawable/app_selector_activate_hint_button"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ah_activate_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>