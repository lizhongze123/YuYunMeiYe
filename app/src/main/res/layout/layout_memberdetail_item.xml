<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/common_selector_default"
            android:id="@+id/rv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/member_item_size"
                android:layout_height="@dimen/member_item_size"
                android:src="@drawable/index_detail" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="详细资料"
                android:textColor="@color/gray_66"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/common_selector_default"
            android:id="@+id/rv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="@dimen/member_item_size"
                android:layout_height="@dimen/member_item_size"
                android:src="@drawable/index_recommend" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv2"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="TA的推荐"
                android:textColor="@color/gray_66"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/common_selector_default"
            android:id="@+id/rv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="@dimen/member_item_size"
                android:layout_height="@dimen/member_item_size"
                android:src="@drawable/index_fortune" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv3"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="资产信息"
                android:textColor="@color/gray_66"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <RelativeLayout
            android:background="@drawable/common_selector_default"
            android:id="@+id/rv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="@dimen/member_item_size"
                android:layout_height="@dimen/member_item_size"
                android:src="@drawable/index_communication" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv4"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="沟通记录"
                android:textColor="@color/gray_66"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/common_selector_default"
            android:id="@+id/rv5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="@dimen/member_item_size"
                android:layout_height="@dimen/member_item_size"
                android:src="@drawable/index_callback" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv5"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="回访记录"
                android:textColor="@color/gray_66"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/common_selector_default"
            android:id="@+id/rv6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="@dimen/member_item_size"
                android:layout_height="@dimen/member_item_size"
                android:src="@drawable/index_appointment" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv6"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="预约记录"
                android:textColor="@color/gray_66"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>





</LinearLayout>