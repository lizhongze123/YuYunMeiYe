<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_selector_list_view_item"
        android:padding="@dimen/x24">

        <cn.yuyun.yymy.view.RoundAngleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/x16"
            android:src="@drawable/default_store" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_avatar">

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_storeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:textColor="#1C1C1C"
                    android:textSize="@dimen/x28" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_nameDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_user"
                android:layout_marginTop="@dimen/y10"
                android:text="负责人:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/x24" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_user"
                android:layout_marginTop="@dimen/y10"
                android:layout_toRightOf="@id/tv_nameDesc"
                android:textColor="#7a7a7a"
                android:textSize="@dimen/x24"
                tools:text="李李李" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="@dimen/y4"
                android:textColor="#7a7a7a"
                android:textSize="@dimen/x24"
                tools:text="dddssssssssssssssssssssssss" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl"
        android:layout_width="match_parent"
        android:background="#f2f2f2"
        android:drawingCacheQuality="low"
        android:layout_height="@dimen/y1"/>

</RelativeLayout>