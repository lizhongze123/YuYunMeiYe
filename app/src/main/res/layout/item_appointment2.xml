<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_selector_list_view_item"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x32"
        android:paddingRight="@dimen/x32"
        android:paddingTop="@dimen/y20">

        <cn.yuyun.yymy.view.RoundAngleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_store" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_toRightOf="@id/iv_avatar">

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="用户名"
                    android:textColor="#FF1C1C1C"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_toRightOf="@id/tv_name"
                    android:background="@drawable/shape_new_bg"
                    android:paddingBottom="@dimen/y4"
                    android:paddingLeft="@dimen/x25"
                    android:paddingRight="@dimen/x25"
                    android:paddingTop="@dimen/y4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x22"
                    tools:text="钻石" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_user"
                android:layout_marginTop="@dimen/y8"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/x22"
                tools:text="12352525525" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_appointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_avatar"
            android:layout_marginTop="@dimen/y10"
            android:textColor="#FF222222"
            android:textSize="@dimen/x24"
            tools:text="内内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容容" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_appointmentTime"
            android:layout_marginTop="@dimen/y10"
            android:textColor="#FF222222"
            android:textSize="@dimen/x24"
            tools:text="内内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容容" />

        <TextView
            android:id="@+id/tv_staffDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="@dimen/y10"
            android:text="服务人员:"
            android:textColor="#FF7A7A7A"
            android:textSize="@dimen/x18" />

        <TextView
            android:id="@+id/tv_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@+id/tv_staffDesc"
            android:text="人员"
            android:textColor="#FF7A7A7A"
            android:textSize="@dimen/x18" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="@dimen/y10"
            android:text="2018年5月23日 14:44:44"
            android:textColor="#FF7A7A7A"
            android:textSize="@dimen/x18" />


    </RelativeLayout>

    <View
        style="@style/separation_line"
        android:layout_below="@+id/rl" />

</RelativeLayout>