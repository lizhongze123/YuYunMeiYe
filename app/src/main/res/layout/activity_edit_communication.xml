<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/common_selector_list_view_item"
                android:layout_margin="@dimen/x24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <cn.yuyun.yymy.view.RoundAngleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:src="@drawable/avatar_default_female" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/y8"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="名字"
                            android:layout_marginLeft="@dimen/x16"
                            android:layout_marginRight="@dimen/x8"
                            android:textColor="#3f3f3f"
                            android:textSize="@dimen/x28" />

                        <TextView
                            android:id="@+id/tv_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            tools:text="2018年1月"
                            android:textColor="#FFA0D4"
                            android:textSize="@dimen/x20" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            tools:text="2018年1月23日10:12:50"
                            android:textColor="#7a7a7a"
                            android:textSize="@dimen/x20" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_store"
                        android:paddingLeft="@dimen/x16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y8"
                        android:text="门店："
                        android:textColor="#3f3f3f"
                        android:textSize="@dimen/x24" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y10"
                android:drawingCacheQuality="low"
                android:background="#f5f5f5"/>

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="start"
                android:hint="请输入内容"
                android:minHeight="@dimen/y360"
                android:paddingBottom="@dimen/x24"
                android:paddingEnd="@dimen/x24"
                android:paddingLeft="@dimen/x24"
                android:paddingRight="@dimen/x24"
                android:paddingStart="@dimen/x24"
                android:paddingTop="@dimen/x24"
                android:textColor="#3f3f3f"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/x28" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y10"
                android:drawingCacheQuality="low"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <cn.yuyun.yymy.view.selectpic.SelectPicView
                    android:id="@+id/selectPicView"
                    android:layout_below="@+id/tv_wallDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x24"
                    android:layout_marginRight="@dimen/x24"
                    android:layout_marginTop="@dimen/y24"
                    android:layout_marginBottom="@dimen/y24"
                    tools:listitem="@layout/item_pic_wall" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
