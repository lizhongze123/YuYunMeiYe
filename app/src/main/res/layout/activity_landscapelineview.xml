<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/x92"
            android:layout_height="@dimen/x88"
            android:layout_centerVertical="true"
            android:src="@drawable/back_black"
            android:background="@drawable/common_selector_default"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:paddingBottom="@dimen/y22"
            android:paddingTop="@dimen/y22"/>

        <RelativeLayout
            android:id="@+id/rl_title"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16"
            android:background="@drawable/common_selector_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="全部"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/x32" />

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_toRightOf="@+id/tv_type"
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:layout_marginLeft="@dimen/x8"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_down" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="@dimen/x92"
            android:layout_height="@dimen/x88"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/common_selector_default"
            android:src="@drawable/icon_reduce"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24"
            android:paddingTop="@dimen/y22"
            android:paddingBottom="@dimen/y22"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24">

            <RadioGroup
                android:id="@+id/radioGroupTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/analysis_radio_group_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/y14"
                android:paddingTop="@dimen/y14">

                <RadioButton
                    android:id="@+id/rb_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_radio_bg_left"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x33"
                    android:paddingRight="@dimen/x33"
                    android:text="业绩"
                    android:textColor="@drawable/line_radio_text"
                    android:textSize="@dimen/x22" />

                <RadioButton
                    android:id="@+id/rb_two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/line_radio_bg_right"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x33"
                    android:paddingRight="@dimen/x33"
                    android:text="消耗"
                    android:textColor="@drawable/line_radio_text"
                    android:textSize="@dimen/x22" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20">

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/x24"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x8"
                        android:src="@drawable/ic_checked"/>

                    <TextView
                        android:layout_toRightOf="@+id/iv_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="月"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/x22"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20">

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="@dimen/x24"
                        android:layout_height="@dimen/x24"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x8"
                        android:src="@drawable/ic_unchecked"/>

                    <TextView
                        android:layout_toRightOf="@+id/iv_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/x22"/>

                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x24"
            android:paddingRight="@dimen/x24">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:text="10月份"
                android:textStyle="bold"
                android:textColor="#3f3f3f"
                android:textSize="@dimen/x24" />

            <LinearLayout
                android:id="@+id/ll_last"
                android:layout_toLeftOf="@+id/line_vertical"
                android:background="@drawable/common_selector_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_last"
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:src="@drawable/last_able"
                    android:layout_marginRight="@dimen/x4"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_last"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="上月"
                    android:textColor="#3F3F3F"
                    android:textSize="@dimen/x24" />

            </LinearLayout>

            <View
                android:id="@+id/line_vertical"
                android:layout_width="@dimen/x2"
                android:layout_height="@dimen/y24"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_toLeftOf="@+id/ll_next"
                android:layout_centerVertical="true"
                android:background="#3F3F3F"
                android:drawingCacheQuality="low" />

            <LinearLayout
                android:id="@+id/ll_next"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_selector_default"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="下月"
                    android:textColor="#3F3F3F"
                    android:textSize="@dimen/x24" />

                <ImageView
                    android:id="@+id/iv_next"
                    android:layout_width="@dimen/x24"
                    android:layout_height="@dimen/x24"
                    android:src="@drawable/next_enable"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <cn.yuyun.yymy.view.lineview.BusinessLineViewLandscape
                android:id="@+id/businessLineView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                app:lineColorLandscape="#FFAC13"
                android:visibility="visible" />

            <cn.yuyun.yymy.view.lineview.BusinessLineViewLandscape
                android:id="@+id/businessLineView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                app:lineColorLandscape="#50D3C0"
                android:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>