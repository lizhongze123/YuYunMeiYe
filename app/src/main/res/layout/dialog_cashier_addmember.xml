<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_white_corner"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:layout_marginTop="@dimen/y40"
        android:src="@drawable/icon_finish" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x32"
        android:layout_marginTop="@dimen/y16"
        android:textStyle="bold"
        android:textColor="#50D3C0"
        android:text="新增完成" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否对该会员进行收银作业"
        android:layout_marginLeft="@dimen/x80"
        android:layout_marginRight="@dimen/x80"
        android:layout_marginTop="@dimen/y32"
        android:textSize="@dimen/x28"
        android:textColor="#7a7a7a"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginTop="@dimen/y24"
        android:drawingCacheQuality="low"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:id="@+id/dialog_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不了谢谢"
            android:textStyle="bold"
            android:textColor="#41B0C2"
            android:textSize="@dimen/x32" />

        <View
            android:layout_width="@dimen/y2"
            android:layout_height="@dimen/y110"
            android:background="#f5f5f5"
            android:drawingCacheQuality="low"/>

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="进入收银"
            android:textStyle="bold"
            android:textColor="#41B0C2"
            android:textSize="@dimen/x32" />

    </LinearLayout>

</LinearLayout>