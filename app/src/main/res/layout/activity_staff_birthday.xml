<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y490"
        android:scaleType="fitXY"
        android:src="@drawable/birthday_bg" />

    <RelativeLayout
        android:id="@+id/relay_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/y88"
            android:layout_height="@dimen/y88"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_trans_divider"
            android:padding="@dimen/x24"
            android:src="@drawable/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查看生日员工"
            android:textSize="@dimen/x32"
            android:textColor="#274335" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/iv_bg"
        android:background="@color/white"
        android:layout_marginTop="@dimen/y24"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>